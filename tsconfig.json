{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "./dist",
        "noImplicitAny": false,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}